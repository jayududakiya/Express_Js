<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Product Card</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <div class="px-4 py-10 mx-auto text-center">
        <h3 class="text-5xl leading-6 font-bold text-blue-900 ">
            Enhanced Product Card
        </h3>
        <p class="mt-8 text-base text-gray-500">
            This is some information about the Products.
        </p>
    </div>
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Loop through each product -->
        <% products.forEach(function(product) { %>
            <!-- Product Card -->
            <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <!-- Product Thumbnail -->
                <div class="relative group">
                    <img src="<%= product.thumbnail %>" alt="<%= product.title %> Thumbnail" class="w-full h-64 object-contain  transition-transform duration-300 transform group-hover:scale-105">
                    <div class="absolute inset-0 bg-black bg-opacity-25 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <button class="bg-green-500 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-600">Add to Cart</button>
                    </div>
                </div>

                <!-- Product Content -->
                <div class="p-6">
                    <!-- Product Title -->
                    <h2 class="text-2xl font-bold text-gray-800 mb-2 truncate"><%= product.title %></h2>

                    <!-- Category, Brand, SKU -->
                    <p class="text-sm text-gray-600 mb-1">Category: <span class="font-semibold"><%= product.category %></span></p>
                    <p class="text-sm text-gray-600 mb-1">Brand: <span class="font-semibold"><%= product.brand %></span></p>
                    <p class="text-sm text-gray-600 mb-4">SKU: <span class="font-semibold"><%= product.sku %></span></p>

                    <!-- Price and Discount -->
                    <div class="flex items-center mb-4">
                        <p class="text-xl font-bold text-gray-800">Price: $<span class="text-green-600"><%= product.price %></span></p>
                        <% if (product.discountPercentage) { %>
                            <p class="text-sm text-red-500 ml-4">Discount: <span class="font-semibold"><%= product.discountPercentage %>%</span></p>
                        <% } %>
                    </div>

                    <!-- Product Description (Truncated for brevity) -->
                    <p class="text-gray-700 mb-4 line-clamp-3">Description: <%= product.description %></p>

                    <!-- Ratings -->
                    <div class="flex items-center mb-4">
                        <% const fullStars = Math.floor(product.rating); %>
                        <% const halfStar = product.rating % 1 >= 0.5; %>
                        <% const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); %>
                        <!-- Full Stars -->
                        <% for (let i = 0; i < fullStars; i++) { %>
                            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049.417a.5.5 0 01.902 0l1.35 4.155 4.363-.012a.5.5 0 01.292.922l-3.292 2.381 1.414 4.512a.5.5 0 01-.78.577L10 12.348l-3.298 2.604a.5.5 0 01-.78-.577l1.414-4.512-3.292-2.381a.5.5 0 01.292-.922l4.363.012L9.049.417z"/></svg>
                        <% } %>
                        <!-- Half Star -->
                        <% if (halfStar) { %>
                            <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049.417a.5.5 0 01.902 0l1.35 4.155 4.363-.012a.5.5 0 01.292.922l-3.292 2.381 1.414 4.512a.5.5 0 01-.78.577L10 12.348l-3.298 2.604a.5.5 0 01-.78-.577l1.414-4.512-3.292-2.381a.5.5 0 01.292-.922l4.363.012L9.049.417zM10 15.348V3.417"/></svg>
                        <% } %>
                        <!-- Empty Stars -->
                        <% for (let i = 0; i < emptyStars; i++) { %>
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049.417a.5.5 0 01.902 0l1.35 4.155 4.363-.012a.5.5 0 01.292.922l-3.292 2.381 1.414 4.512a.5.5 0 01-.78.577L10 12.348l-3.298 2.604a.5.5 0 01-.78-.577l1.414-4.512-3.292-2.381a.5.5 0 01.292-.922l4.363.012L9.049.417z"/></svg>
                        <% } %>
                        <span class="ml-2 text-sm text-gray-600"><%= product.rating %>/5</span>
                    </div>

                    <!-- CTA Buttons -->
                    <div class="flex justify-between items-center">
                        <a href="#" class="text-sm text-blue-600 hover:underline">View Details</a>
                        <button class="bg-green-500 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-600 transition-colors">Add to Cart</button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
